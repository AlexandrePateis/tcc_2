<%= form_with(model: form_of_payment) do |f| %>
  <% if form_of_payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(form_of_payment.errors.count, "error") %> prohibited this form_of_payment from being saved:</h2>

      <ul>
        <% form_of_payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">

    <div>
      <%= f.label "Nome da forma de pagamento", style: "display: block", class: "fw-bold text-muted" %>
      <%= f.text_field :name, class: "form-control mb-3" %>
    </div>

    <div class="form-group">
      <%= f.label :financial_account_id, "Financial Account", class: "fw-bold text-muted" %>
      <%= f.select :financial_account_id, options_from_collection_for_select(@financial_accounts, :id, :bank), { include_blank: "Selecione uma conta financeira" }, required: true, class: "form-control mb-3" %>
    </div>

    <div class="d-flex gap-2 mt-3">
      <%= f.submit @form_of_payment.new_record? ? "Criar forma de pagamento" : "Atualizar forma de pagamento", class: "btn btn-sm btn-primary"  %>
      <%= link_to "Voltar", form_of_payments_path, class: "btn btn-sm btn-secondary"  %>
    </div>
  </div>
<% end %>
