<%= form_with(model: guest) do |f| %>
  <% if guest.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(guest.errors.count, "error") %> prohibited this guest from being saved:</h2>
      <ul>
        <% guest.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
    <div>
      <%= f.label :name, style: "display: block", class: "fw-bold text-muted" %>
      <%= f.text_field :name, class: "form-control mb-3" %>
    </div>

    <div>
      <%= f.label :birthday, style: "display: block", class: "fw-bold text-muted" %>
      <%= f.date_field :birthday, class: "form-control mb-3" %>
    </div>

    <div>
      <%= f.label :gender, "Gênero", style: "display: block", class: "fw-bold text-muted" %>
      <%= f.select :gender, [["Masculino", true], ["Feminino", false]], {}, class: "form-control mb-3" %>
    </div>

    <div class="form-group">
  <%= f.label :observation, "Observações", class: "fw-bold text-muted" %>
  <%= f.text_area :observation, class: "form-control" %>
</div>



    <div class="d-flex gap-2 mt-3">
      <%= f.submit @guest.new_record? ? "Criar hóspede" : "Atualizar hóspede", class: "btn btn-sm btn-primary" %>
      <%= link_to "Voltar", guests_path, class: "btn btn-sm btn-secondary" %>
    </div>
  </div>
<% end %>
