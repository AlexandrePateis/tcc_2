<div class="row-my-login color_top_nav_log rounded p-5 mt-4 border">
<p class="navbar-brand fs-3 " href="#"><i class="fa-solid fa-square-h"></i>MyHotel.com</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group mt-2">
    <%= f.label :email, class: 'fw-bold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: 'form-control'  %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :password,"Senha", class: 'fw-bold' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control'  %>
  </div>

<div class="d-flex justify-content-between mt-3">
  <% if devise_mapping.rememberable? %>
  <div class="form-group mt-2">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "Lembrar-me" %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", class: "btn btn-primary" %>
  </div>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>

